<h1>Restaurants</h1>

<ol>
  <% @restaurants.each do |restaurant| %>

    <li><strong><%=  restaurant.name%></strong>
      <br>
    <em><%= restaurant.category %></em>
    <br>
    Phone number: <%=  restaurant.phone_number %>
    <br>
    Address: <%=  restaurant.address %></li>
  <% end %>

</ol>

<button class="btn btn-primary"><%= link_to "Add a new restaurant", new_restaurant_path %></button>
